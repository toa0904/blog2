<div class="container">
  <div class="row">
    <% @article.each do |article| %>
      <%= link_to article do %>
        <div class="col-md-3 box">
          <%= image_tag 'dog.jpeg', class: 'img-responsive' %>
          <div class="text-box">
            <p class="title"><%= article.title %></p>
            <span class="created">
              <%= article.created_at.strftime("%Y年%m月%d日") %>
            </span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <%= link_to '新規作成', new_article_path, class: 'btn btn-primary' %>
  </div>
</div>
